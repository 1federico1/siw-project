<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="restaurant-unit"
		transaction-type="RESOURCE_LOCAL">
		<class>it.uniroma3.db.project.persistence.entity.DescrizionePiatto</class>
		<class>it.uniroma3.db.project.persistence.entity.LineaComanda</class>
		<class>it.uniroma3.db.project.persistence.entity.Comanda</class>
		<class>it.uniroma3.db.project.persistence.entity.Piatto</class>
		<class>it.uniroma3.db.project.persistence.entity.CategoriaPiatto</class>
		<class>it.uniroma3.db.project.persistence.entity.Prenotazione</class>
		<class>it.uniroma3.db.project.persistence.entity.Tavolo</class>
		<class>it.uniroma3.db.project.persistence.entity.Utente</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.user" value="postgres" />
			<property name="javax.persistence.jdbc.password" value="postgres" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost/restaurant" />
			<!-- Hibernate properties -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.temp.use_jdbc_metadata_defaults"
				value="true" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
		</properties>
	</persistence-unit>
</persistence>